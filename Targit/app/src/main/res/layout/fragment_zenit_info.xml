        <LinearLayout
            android:id="@+id/zenit_info_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="50%">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/zen_it_knop"
                android:layout_weight="1"/>



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/colorZenit"

                android:layout_margin="20dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="#ffffff"
            android:elevation="2dp"
            android:layout_toEndOf="@id/zenit_info_left"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:layout_heightPercent="90%"/>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="50%"
            android:layout_toEndOf="@id/zenit_info_left">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/titel_zenit_info"
                app:layout_heightPercent="24%"
                android:layout_marginTop="-10dp"/>


            <Button
                android:id="@+id/zenit_info_button_play_short"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="60%"
                app:layout_heightPercent="14%"
                android:layout_above="@+id/zenit_info_button_play_medium"
                android:layout_alignStart="@+id/zenit_info_button_play_long"
                android:layout_marginTop="23.3dp"
                android:background="@color/colorMakkelijk"
                android:text="30 seconden"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/zenit_info_button_play_medium"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="60%"
                app:layout_heightPercent="14%"
                android:layout_above="@+id/zenit_info_button_play_long"
                android:layout_alignStart="@+id/zenit_info_button_play_long"
                android:layout_marginTop="23.3dp"
                android:background="@color/colorMatig"
                android:text="60 seconden"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/zenit_info_button_play_long"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="60%"
                app:layout_heightPercent="14%"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="23.3dp"
                android:adjustViewBounds="true"
                android:background="@color/colorMoeilijk"
                android:text="90 seconden"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="30sp" />
        </android.support.percent.PercentRelativeLayout>

    </android.support.percent.PercentRelativeLayout>

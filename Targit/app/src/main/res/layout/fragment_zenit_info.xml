<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.infogamemode.ZenitInfoFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/info_zenit" />

    <Button
        android:id="@+id/zenit_info_button_play_short"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="30 sec" />

    <Button
        android:id="@+id/zenit_info_button_play_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="60 sec" />

    <Button
        android:id="@+id/zenit_info_button_play_long"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="90 sec" />

</LinearLayout>

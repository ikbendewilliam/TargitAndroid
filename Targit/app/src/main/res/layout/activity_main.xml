<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_top_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="be.howest.nmct.targit.views.MainActivity">


    <ImageView
        android:layout_gravity="center"
        android:id="@+id/activity_main_imageview_title"
        android:layout_centerHorizontal="true"
        android:layout_width="474dp"
        android:layout_height="186dp"
        android:layout_marginTop="-10dp"
        android:src="@drawable/titel_gamemode"/>
    <ImageView
        android:id="@+id/image_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/action_settings"
        android:src="@drawable/cogwheel" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@id/activity_main_imageview_title"
        android:layout_height="wrap_content"
        android:id="@+id/activity_main_linearlayout"
        android:layout_centerHorizontal="true">



        <ImageView
            android:id="@+id/activity_main_imageview_smashit"
            android:layout_width="350dp"
            android:layout_height="354dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:contentDescription="@string/action_settings"
            android:src="@drawable/smash_it"
            android:baselineAlignBottom="true"/>

        <ImageView
            android:id="@+id/activity_main_imageview_zenit"
            android:layout_width="320dp"
            android:layout_height="324dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:contentDescription="@string/action_settings"
            android:baselineAlignBottom="true"
            android:src="@drawable/zen_it_knop" />

        <ImageView
            android:id="@+id/activity_main_imageview_memorit"
            android:layout_width="320dp"
            android:layout_height="418dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:contentDescription="@string/action_settings"
            android:baselineAlignBottom="true"
            android:src="@drawable/memor_it" />

    </LinearLayout>

    <Button
        android:id="@+id/activity_main_button_highscore"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_main_linearlayout"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:background="@color/colorMain"
        android:text="@string/title_activity_highscore"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="24sp" />







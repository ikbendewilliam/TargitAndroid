<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.ingame.SmashitGameFragment"
    android:background="@color/colorBackground">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/fragment_zenit_game_relativelayout_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="80%"
        android:background="@color/colorZenit"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

       <TextView
           android:id="@+id/fragment_zenit_game_textview_timer"
           android:layout_centerInParent="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/colorText"
           android:text="00:34"
           android:textSize="62sp"/>

    </android.support.percent.PercentRelativeLayout>

    <!--score-->
    <android.support.percent.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="27%"
        app:layout_widthPercent="30%"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/zenit_ellipse"></ImageView>
        <TextView
            android:id="@+id/fragment_zenit_game_textview_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21"
            android:textSize="52sp"
            android:textColor="@color/colorText"
            android:layout_centerInParent="true"/>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="100%"
        android:layout_below="@id/fragment_zenit_game_relativelayout_frame"
        >
        <Button
            android:id="@+id/fragment_zenit_game_button_stop"
            android:text="stop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="40%"
            app:layout_widthPercent="20%"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:background="@color/colorStop"
            android:textColor="@color/colorText"
            android:textSize="32sp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"/>

    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>